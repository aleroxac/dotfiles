# ---------- Aplicações abertas em modo Floating
for_window [class="Nitrogen"] floating enable sticky enable border normal
for_window [instance=lxappearance] floating enable
for_window [instance=pavucontrol] floating enable resize set 840 680
for_window [class="XTerm"] floating enable
for_window [instance="gnome-calculator"] floating enable



# ---------- touchpad tweaks
exec synclient PalmDetect=1
exec synclient TapButton1=1
exec synclient TapButton2=1
exec synclient TapButton3=1



# ---------- multimedia keys
bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioStop exec "mpc stop"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioPrev exec "mpc prev"
bindsym XF86AudioRaiseVolume exec "amixer set Master 2%+"
bindsym XF86AudioLowerVolume exec "amixer set Master 2%-"



# ---------- rofi bindings
bindsym $mod+d exec rofi -show run -theme DarkBlue -lines 10 -separator-style none -font "Hack 10"
bindsym $mod+Shift+d exec rofi -sidebar-mode -show-icons -show drun -theme DarkBlue -lines 10 -font "Hack 10" 
bindsym $mod+Ctrl+d exec dmenu_run 
bindsym $mod+Tab exec rofi -show-icons -show window -theme DarkBlue -lines 10 -font "Hack 10"



# ---------- change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right



# ---------- move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ccedilla move right



# ---------- alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right



# ---------- orientation splits and layouts
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle 
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split



# ---------- toggle tiling / floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent



